{
  "name": "virtualized-renderer",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://mikebars.github.io/virtualized-renderer",
  "license": "UNLICENSED",
  "author": "Mike Bars <mikebarsdev@gmail.com> (https://mikebars.github.io/)",
  "main": "package.json",
  "repository": "https://github.com/mikebars/virtualized-renderer.git",
  "dependencies": {
    "@prettier/plugin-xml": "0.13.0",
    "@types/lodash.debounce": "4.0.6",
    "@types/node": "14.14.25",
    "@types/prettier": "2.2.0",
    "@types/react": "17.0.1",
    "@types/react-dom": "17.0.0",
    "gh-pages": "3.1.0",
    "lodash.debounce": "4.0.8",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.2",
    "serve": "11.3.2",
    "typescript": "4.1.3"
  },
  "scripts": {
    "|---------------------------------------------------------------------------|": "",
    "|--Application--------------------------------------------------------------|": "",
    "|--`react-app`--------------------------------------------------------------|": "",
    "react-app:development": "yarn react-scripts:start",
    "react-app:production": "yarn react-scripts:build && yarn react-scripts:serve",
    "react-app:static": "PUBLIC_URL=/ yarn react-scripts:build && yarn react-scripts:serve",
    "|--`react-scripts`----------------------------------------------------------|": "",
    "react-scripts:build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "react-scripts:serve": "serve build --listen 3000 --no-clipboard --single",
    "react-scripts:start": "SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "|--DevOps-------------------------------------------------------------------|": "",
    "|--`deploy`-----------------------------------------------------------------|": "",
    "deploy": "yarn lint && yarn react-scripts:build && yarn deploy:gh-pages",
    "deploy:gh-pages": "gh-pages --dist build",
    "|--Tools--------------------------------------------------------------------|": "",
    "|--`lint`-------------------------------------------------------------------|": "",
    "lint": "yarn lint:prettier . && yarn lint:eslint . && yarn lint:tsc",
    "lint:eslint": "eslint --cache --cache-location .eslintcache --max-warnings 0 --no-error-on-unmatched-pattern",
    "lint:prettier": "prettier --list-different --loglevel error",
    "lint:prettier:write": "yarn lint:prettier --write",
    "lint:tsc": "tsc --generateCpuProfile profile.cpuprofile --project tsconfig.json",
    "|--Utilities----------------------------------------------------------------|": "",
    "|--`clean`------------------------------------------------------------------|": "",
    "clean": "yarn clean:node && yarn clean:npm && yarn clean:yarn",
    "clean:node": "rm --force --recursive node_modules/ && mkdir node_modules",
    "clean:npm": "rm --force npm-*.log npm-shrinkwrap.json package-lock.json && npm cache clear --force",
    "clean:yarn": "rm --force yarn-*.har yarn-*.log yarn.lock && yarn cache clean",
    "|--`reset`------------------------------------------------------------------|": "",
    "reset": "yarn clean && yarn install",
    "|--`silent`-----------------------------------------------------------------|": "",
    "silent": "$($1) > /dev/null 2>&1",
    "|___________________________________________________________________________|": ""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
